<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".QuestionActivity">

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/image_btn3"
        android:layout_alignStart="@+id/image_btn1"
        android:text="TextView"
        android:textSize="25dp"
        android:layout_marginTop="25dp"
        android:textColor="#880e4f"
        />

    <View android:background="#000000"
        android:layout_width = "match_parent"
        android:layout_height="1dp"
        android:layout_above="@+id/editText"
        />

    <EditText
        android:id="@+id/editText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/image_btn1"
        android:layout_alignEnd="@+id/image_btn3"
        android:layout_alignStart="@+id/image_btn1"
        android:editable="false"
        android:hint="Inputed Sequence"
        android:text="" />

    <Button
        android:id="@+id/image_btn1"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:layout_toLeftOf="@+id/image_btn2"
        android:layout_above="@id/image_btn6"
        android:text="A"
        android:textColor="#1b5e20"
        android:textSize="50dp"
        android:textStyle="bold"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
         />

    <Button
        android:id="@+id/image_btn2"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/image_btn6"
        android:text="B"
        android:textColor="#1b5e20"
        android:textSize="50dp"
        android:textStyle="bold"
        android:layout_marginBottom="10dp"
        />

    <Button
        android:id="@+id/image_btn3"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:layout_toRightOf="@+id/image_btn2"
        android:layout_above="@id/image_btn6"
        android:text="C"
        android:textColor="#1b5e20"
        android:textSize="50dp"
        android:textStyle="bold"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        />

    <Button
        android:id="@+id/image_btn4"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:layout_toLeftOf="@+id/image_btn5"
        android:layout_above="@id/image_btn9"
        android:text="D"
        android:textColor="#1b5e20"
        android:textSize="50dp"
        android:textStyle="bold"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        />

    <Button
        android:id="@+id/image_btn5"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/image_btn9"
        android:text="E"
        android:textColor="#1b5e20"
        android:textSize="50dp"
        android:textStyle="bold"
        android:layout_marginBottom="10dp"
        />

    <Button
        android:id="@+id/image_btn6"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:layout_toRightOf="@+id/image_btn5"
        android:layout_above="@id/image_btn9"
        android:text="F"
        android:textColor="#1b5e20"
        android:textSize="50dp"
        android:textStyle="bold"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
         />

    <Button
        android:id="@+id/image_btn7"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:layout_toLeftOf="@+id/image_btn8"
        android:layout_above="@+id/submit_btn"
        android:text="G"
        android:textColor="#1b5e20"
        android:textSize="50dp"
        android:textStyle="bold"
        android:layout_marginRight="10dp"
        />

    <Button
        android:id="@+id/image_btn8"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/submit_btn"
        android:text="H"
        android:textColor="#1b5e20"
        android:textSize="50dp"
        android:textStyle="bold"
        />

    <Button
        android:id="@+id/image_btn9"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:layout_toRightOf="@+id/image_btn8"
        android:layout_above="@+id/submit_btn"
        android:text="I"
        android:textColor="#1b5e20"
        android:textSize="50dp"
        android:textStyle="bold"
        android:layout_marginLeft="10dp"
        />

    <Button
        android:id="@+id/submit_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="25dp"
        android:layout_centerHorizontal="true"
        android:text="Submit"
        android:textColor="#304ffe"
        android:textSize="25dp"
        android:textStyle="bold"
        />


</RelativeLayout>